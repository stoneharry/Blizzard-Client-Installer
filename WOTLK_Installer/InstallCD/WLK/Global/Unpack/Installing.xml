<?xml version="1.0" encoding="utf-8"?>
<!-- World of Warcraft installing page -->

<page title="{WorldOfWarcraftInstaller}" font="{Font}" color_over="FFFFFF" color_down="FF0000">
	
	<!-- play the loop -->
  <if true_condition="Win32">
    <then>
      <sound_play file="Audio/InstallLoop.wav" loop="true" start_volume="50" volume="50" end_volume="50" fadeout_duration="0" />
    </then>
  </if>

  <if true_condition="MacOS">
    <then>
      <sound_play file="Audio/InstallLoop.wav" loop="true" start_volume="100" volume="100" end_volume="0" fadeout_duration="1000" />
